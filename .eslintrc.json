{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": [
        "jest"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "max-len": ["error", { "code": 120 }]
    }
}